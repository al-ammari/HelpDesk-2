@model DepartmentVM
@using (Html.BeginForm())
            {
    <div class="box-body">
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Departman adını giriniz" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Açıklama" })
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Kayıt</button>
    </div>
}